<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/kit_bottom_dialog_bg1"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:textColor="@color/kit_textColor"
            android:textSize="16sp" />

    </LinearLayout>




    <com.example.fastkit.views.dialog.bottom_dialog.utils.MaxHeightView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mhv_HeightRatio="0.7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/kit_bottom_dialog_bg2"
            android:orientation="vertical">

            <ListView
                android:id="@+id/bottom_lib_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:dividerHeight="3px"
                android:scrollbars="none" />
        </LinearLayout>

    </com.example.fastkit.views.dialog.bottom_dialog.utils.MaxHeightView>


    <Button
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/kit_bottom_dialog_bg3"
        android:text="取消"
        android:textColor="@color/kit_textColor"
        android:textSize="16sp" />

</LinearLayout>